@model ProductDataAccess.DTOs.UserDTO
@{
    ViewData["PageTitle"] = "User Details";
    ViewData["Users"] = "active";
    ViewData["SearchURL"] = "AdminUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main class="main-content position-relative border-radius-lg">
    @Html.Partial("~/Views/Shared/_AdminNavbar.cshtml")
    <div class="container-fluid py-4">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white pb-0">
                        <h5 class="mb-0"><i class="fas fa-user-circle me-2"></i>User Details</h5>
                        
                    </div>
                    <div class="card-body p-4">
                        <div class="row mb-3">
                            <div class="col-sm-4 text-secondary">Username</div>
                            <div class="col-sm-8 text-dark">@Model.Username</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4 text-secondary">Email</div>
                            <div class="col-sm-8 text-dark">@Model.Email</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4 text-secondary">Group</div>
                            <div class="col-sm-8 text-dark">@Model.Group.GroupName</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4 text-secondary">Status</div>
                            <div class="col-sm-8">
                                <span class="badge @((bool)Model.IsActive ? "bg-success" : "bg-danger")">
                                    <i class="fas @((bool)Model.IsActive ? "fa-check-circle" : "fa-times-circle") me-1"></i>
                                    @((bool)Model.IsActive ? "Active" : "Inactive")
                                </span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4 text-secondary">Created At</div>
                            <div class="col-sm-8 text-dark">@Model.CreatedAt.ToString("dd/MM/yyyy")</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4 text-secondary">Last Updated</div>
                            <div class="col-sm-8 text-dark">@Model.LastUpdated.ToString("dd/MM/yyyy")</div>
                        </div>
                    </div>
                    <div class="card-footer bg-light d-flex justify-content-end">
                        <a href="@Url.Action("Edit", "AdminUser", new { id = Model.UserId })" class="btn btn-primary me-2">
                            <i class="fas fa-edit"></i> Edit User
                        </a>
                        <a href="@Url.Action("Index", "AdminUser")" class="btn btn-info">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
