        <script>
        function updateLoginStatus() {
            const token = localStorage.getItem("authToken"); // Hoặc sessionStorage.getItem("authToken");
            const authLink = $("#authLink a");
            if (token) {
                // Người dùng đã đăng nhập - hiển thị "Sign out"
                authLink.text("Sign out");
                authLink.removeAttr("href"); // Bỏ href để tránh mở modal
                authLink.removeAttr("data-toggle");

                // Thêm sự kiện đăng xuất khi nhấp
                authLink.on("click", function () {
                    logout();
                });
            } else {
                // Người dùng chưa đăng nhập - hiển thị "Sign in / Sign up"
                authLink.text("Sign in / Sign up");
                authLink.attr("href", "#signin-modal");
                authLink.attr("data-toggle", "modal");

                // Xóa sự kiện đăng xuất nếu có
                authLink.off("click");
            }
        }

        // Hàm đăng xuất
        function logout() {
            localStorage.removeItem("authToken");
            $.ajax({
                url: 'https://localhost:7016/api/AuthContronller/logout',
                type: 'POST',
                contentType: 'application/json',
                success: function (response) {
                    // Xóa token khỏi localStorage hoặc sessionStorage khi đăng xuất thành công
                    // hoặc sessionStorage.removeItem("authToken");

                    // Cập nhật trạng thái đăng nhập trên giao diện
                    updateLoginStatus();
                },
                error: function (xhr, status, error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Logout Failed',
                        text: 'Logout Failed, please try again ',
                        confirmButtonText: 'Try Again'
                    });
                }
            });
            updateLoginStatus();
        }

        // Kiểm tra trạng thái đăng nhập khi tải trang
        $(document).ready(function () {
            if ('@Context.Session.GetInt32("UserId")'=='') {
                localStorage.removeItem("authToken");
            }
            updateLoginStatus();            
        });

